#include <stdio.h>
#include <ctype.h>
#include <stdlib.h>

char input[100];
int pos = 0;

void error() {
    printf("ERROR: Not valid according to grammar.\n");
    exit(1);
}

char peek() { return input[pos]; }
void match(char expected) {
    if (peek() == expected) pos++;
    else error();
}

void E(); void E1(); void T(); void T1(); void F();

void E() { T(); E1(); }
void E1() {
    if (peek() == '+') { match('+'); T(); E1(); }
    else if (peek() == '-') { match('-'); T(); E1(); }
}
void T() { F(); T1(); }
void T1() {
    if (peek() == '*') { match('*'); F(); T1(); }
    else if (peek() == '/') { match('/'); F(); T1(); }
}
void F() {
    if (peek() == '(') { match('('); E(); match(')'); }
    else if (isalpha(peek())) match(peek());
    else error();
}

int main() {
    printf("Enter input string: ");
    scanf("%s", input);

    E();
    if (peek() == '\0')
        printf("Valid string according to grammar.\n");
    else
        error();
    return 0;
}
