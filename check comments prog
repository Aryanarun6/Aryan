#include <stdio.h>
#include <string.h>

#define MAX_LINE 1000

int main() {
    char line[MAX_LINE];
    int inMultiLineComment = 0;

    printf("Enter lines of code (type 'END' to finish input):\n");

    while (1) {
        fgets(line, sizeof(line), stdin);

        // Stop if user types END
        if (strncmp(line, "END", 3) == 0)
            break;

        // Check for multi-line comment continuation
        if (inMultiLineComment) {
            printf("Comment line: %s", line);
            if (strstr(line, "*/") != NULL) {
                inMultiLineComment = 0;  // end of multi-line comment
            }
            continue;
        }

        // Trim leading spaces
        int i = 0;
        while (line[i] == ' ' || line[i] == '\t') i++;

        // Check for single-line comment
        if (line[i] == '/' && line[i+1] == '/') {
            printf("Comment line: %s", line);
        }
        // Check for multi-line comment start
        else if (line[i] == '/' && line[i+1] == '*') {
            printf("Comment line: %s", line);
            inMultiLineComment = 1;
            // If multi-line comment ends on same line
            if (strstr(line + i + 2, "*/") != NULL) {
                inMultiLineComment = 0;
            }
        }
        else {
            printf("Not a comment line: %s", line);
        }
    }

    return 0;
}
